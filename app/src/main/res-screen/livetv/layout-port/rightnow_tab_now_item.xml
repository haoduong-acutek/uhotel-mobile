<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:background="@color/black"
    android:layout_width="210dp" android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent" android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_height="150dp" android:id="@+id/imageView"/>
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content" android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Max Mad"
        android:textSize="@dimen/big" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:textColor="@color/white" android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:text="Season 1"
        android:textSize="@dimen/normal" />
    <TextView android:layout_marginLeft="10dp" android:layout_alignParentRight="true"
        android:id="@+id/txtDuration" android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:textColor="@color/orange"
        android:layout_height="wrap_content"
        android:text="2 mins. left"
        android:textSize="@dimen/small" />
    </RelativeLayout>


</LinearLayout>