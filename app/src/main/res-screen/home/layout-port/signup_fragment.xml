<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/imaLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />
    <EditText style="@style/edittext" android:layout_marginTop="80dp" android:padding="5dp"
        android:layout_width="match_parent" android:textColorHint="@color/dark" android:background="@color/white"
        android:layout_height="40dp" android:textColor="@color/black"
        android:hint="Please input email" android:id="@+id/ediEmail"/>
    <EditText style="@style/edittext" android:layout_marginTop="20dp" android:padding="5dp"
        android:layout_width="match_parent" android:textColorHint="@color/dark" android:background="@color/white"
        android:layout_height="40dp" android:textColor="@color/black"
        android:hint="Please input password" android:id="@+id/ediPassword"/>
    <Button android:textAllCaps="false" android:id="@+id/btnSignup"
        android:layout_width="match_parent" android:text="Sign up" android:layout_marginTop="40dp"
        android:textColor="@color/orange" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" android:background="@drawable/bg_rectangle_big"/>
    <TextView
        android:layout_width="wrap_content" android:text="Already have an account?"
        android:textColor="@color/white" android:layout_marginTop="40dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content" android:text="Login" android:id="@+id/btnToLogin"
        android:textColor="@color/orange" android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />
</LinearLayout>

