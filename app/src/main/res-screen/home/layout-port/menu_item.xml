<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <ImageView
        android:layout_width="110dp" android:id="@+id/imageView"
        android:src="@drawable/settings" android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"/>

    <TextView android:layout_gravity="center_vertical"
        android:layout_width="wrap_content" android:id="@+id/txtName" android:text="Setting"
        android:textSize="22sp" android:textAllCaps="true"
        android:layout_height="wrap_content" android:textColor="@color/orange"/>
</LinearLayout>
