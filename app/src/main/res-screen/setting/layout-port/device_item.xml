<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content" android:adjustViewBounds="true"
         android:id="@+id/imageView" android:src="@drawable/laptop"
        android:layout_height="100dp"/>
    <TextView android:textColor="@color/orange"
        android:textSize="@dimen/normal"
         android:text="My laptop" android:gravity="center"
        android:layout_width="wrap_content" android:id="@+id/txtName"
        android:layout_height="wrap_content" />
</LinearLayout>

