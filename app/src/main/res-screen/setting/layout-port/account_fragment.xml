<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content" android:id="@+id/recyclerView"
        android:layout_height="wrap_content"/>
    <LinearLayout android:layout_marginTop="40dp" android:gravity="center_horizontal"
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView android:gravity="center"
            android:layout_width="150dp" android:text="Edit Settings" android:layout_gravity="center_vertical"
            android:id="@+id/btnleft" android:textColor="@color/orange"
            android:layout_height="35dp" android:background="@drawable/rectangle_orange"/>
        <TextView android:gravity="center"
            android:layout_width="150dp" android:text="Sign out" android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
            android:id="@+id/btnRight" android:textColor="@color/black"
            android:layout_height="35dp" android:background="@color/orange"/>
    </LinearLayout>
</LinearLayout>

