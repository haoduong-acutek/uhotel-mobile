<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="30dp">

    <android.support.v7.widget.AppCompatCheckBox android:layout_gravity="center_vertical"
        android:layout_width="13dp" android:id="@+id/checkbox"
        android:background="@null"
        android:layout_height="13dp" android:button="@drawable/checkbox_selector" />
    <TextView android:layout_gravity="center_vertical" android:layout_marginLeft="10dp"
        android:layout_width="wrap_content" android:textColor="@color/dark"
         android:gravity="center" android:id="@+id/txtName"
        android:layout_height="wrap_content" android:text="hao device"/>

</LinearLayout>

