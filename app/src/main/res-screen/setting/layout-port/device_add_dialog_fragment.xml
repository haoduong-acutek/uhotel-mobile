<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#2a2a2a"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" android:background="@color/orange"/>
    <ImageView android:layout_margin="10dp" android:id="@+id/btnClose"
        android:layout_width="wrap_content" android:layout_gravity="right"
        android:layout_height="wrap_content" android:src="@drawable/x_bold"/>
    <ImageView
        android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" android:src="@drawable/bluetooth"/>
    <TextView android:layout_gravity="center_horizontal" android:layout_marginTop="20dp"
        android:layout_width="250dp" android:textColor="@color/white"
         android:gravity="center" android:id="@+id/txtTitle"
        android:layout_height="wrap_content" android:text="Please turn on your\nbluetooth to add device"/>

    <android.support.v7.widget.RecyclerView android:layout_margin="20dp"
        android:layout_width="wrap_content" android:id="@+id/recyclerView" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <Button android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp" android:text="Add" android:layout_centerVertical="true"
        android:id="@+id/btnAdd" android:textColor="@color/orange"
        android:layout_height="35dp" android:background="@drawable/rectangle_orange"/>
</LinearLayout>

