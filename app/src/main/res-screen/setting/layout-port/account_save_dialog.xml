<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#2a2a2a"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="40dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" android:background="@color/orange"/>
    <ImageView android:layout_margin="10dp" android:id="@+id/btnClose"
        android:layout_width="wrap_content" android:layout_gravity="right"
        android:layout_height="wrap_content" android:src="@drawable/x_bold"/>
    <ImageView android:layout_gravity="center_horizontal" android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/save"/>
    <TextView android:layout_gravity="center_horizontal" android:layout_marginTop="15dp"
        android:layout_width="wrap_content" android:textColor="@color/dark"
         android:gravity="center"
        android:layout_height="wrap_content" android:text="Saved!"/>
</LinearLayout>

