<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/flPlayer"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Max Mad"
            android:textColor="@color/white"
            android:textSize="@dimen/big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2h 34min"
            android:textColor="@color/orange"
            android:textSize="@dimen/small" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent" android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scrollbars="vertical"
            android:text="Mad Max is a 1979 Australian dystopian action film directed by George Miller, produced by Byron Kennedy, Samuel, Hugh Keays-Byrne, Steve Bisley, Tim Burns"
            android:textColor="@color/white"
            android:textSize="@dimen/normal" />
            <LinearLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Director: "
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="First, Last name" android:id="@+id/txtDirector"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_marginTop="5dp"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Starring: "
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="First, Last name" android:id="@+id/txtStar"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:layout_marginTop="5dp"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Genne: "
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="First, Last name" android:id="@+id/txtGenne"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>