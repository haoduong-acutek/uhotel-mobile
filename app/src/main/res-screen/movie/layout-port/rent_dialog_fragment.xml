<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#2a2a2a"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">
    <View
        android:layout_width="match_parent" android:id="@+id/imageView"
        android:layout_height="2dp" android:background="@color/orange"/>
    <ImageView android:layout_alignParentRight="true" android:padding="20dp"
        android:layout_width="wrap_content" android:layout_below="@+id/imageView"
        android:id="@+id/btnClose"
        android:layout_height="wrap_content" android:src="@drawable/x_bold"/>

    <TextView android:layout_centerHorizontal="true"
       android:layout_below="@+id/btnClose" android:textSize="@dimen/big"
        android:layout_width="wrap_content" android:textColor="@color/white"
        android:gravity="center" android:id="@+id/txtTitle"
        android:layout_height="wrap_content" android:text="Watch ‘Mad Max’?"/>

    <LinearLayout android:layout_margin="20dp" android:layout_below="@+id/txtTitle"  android:gravity="center"
        android:layout_width="match_parent" android:layout_gravity="center_horizontal"
        android:layout_height="80dp" android:orientation="horizontal" android:weightSum="2">

        <LinearLayout android:id="@+id/btnRecord"
            android:layout_width="0dp" android:layout_weight="1" android:background="@drawable/livetv_comming_red_shape"
            android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">

            <TextView android:text="Rent" android:textColor="@color/red"
                android:gravity="center"
                android:textSize="@dimen/normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="($12.99)" android:textColor="@color/red"
                android:gravity="center"  android:layout_marginTop="5dp"
                android:textSize="@dimen/normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

