<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"  android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />
    <RelativeLayout android:layout_alignParentBottom="true" android:padding="20dp"
        android:layout_width="match_parent" android:background="@drawable/food_item_overlay_bg"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content" android:id="@+id/txtName" android:layout_above="@+id/llRatingBar"
        android:textSize="@dimen/normal"  android:textStyle="bold" android:text="2" android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" android:textColor="@color/white"/>

    <LinearLayout android:id="@+id/llRatingBar" android:layout_marginBottom="0dp"
        android:layout_width="wrap_content" android:orientation="horizontal"
        android:layout_height="wrap_content" android:layout_above="@+id/txtAddress">
        <RatingBar android:isIndicator="true"
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content" android:layout_above="@+id/txtDesc"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:progressDrawable="@drawable/custom_ratingbar_selector"
            android:numStars="5" android:layout_marginBottom="10dp"
            android:stepSize="1"
            android:rating="3.0" />
        <TextView android:layout_marginLeft="10dp"
            android:layout_width="wrap_content" android:id="@+id/txtResName" android:text="3"
            android:textSize="@dimen/normal" android:layout_gravity="center_vertical"  android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" android:textColor="@color/dark"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content" android:id="@+id/txtAddress" android:text="3"
        android:textSize="@dimen/normal"  android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" android:textColor="@color/dark" android:layout_above="@+id/txtDetail"/>


    <TextView
        android:layout_width="wrap_content" android:id="@+id/txtDetail" android:text="3"
        android:textSize="@dimen/normal"  android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" android:textColor="@color/dark" android:layout_above="@+id/txtOpenTime"/>

    <TextView
        android:layout_width="wrap_content" android:id="@+id/txtOpenTime" android:layout_above="@+id/txtPhone"
        android:textSize="@dimen/normal"   android:text="08-111111" android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content" android:id="@+id/txtPhone" android:layout_alignParentBottom="true"
        android:textSize="@dimen/normal"   android:text="08-111111" android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" android:textColor="@color/white"/>
        </RelativeLayout>
</RelativeLayout>
