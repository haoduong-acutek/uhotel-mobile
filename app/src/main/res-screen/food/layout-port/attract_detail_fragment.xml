<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"  android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />
    <RelativeLayout android:layout_alignParentBottom="true" android:padding="20dp"
        android:layout_width="match_parent" android:background="@drawable/food_item_overlay_bg"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content" android:id="@+id/txtName" android:layout_above="@+id/txtDetail"
        android:textSize="@dimen/normal"  android:textStyle="bold" android:text="2" android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content" android:id="@+id/txtDetail" android:text="3"
        android:textSize="@dimen/normal"  android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" android:textColor="@color/dark" android:layout_above="@+id/btnReserve"/>

    <TextView android:gravity="center" android:layout_alignParentBottom="true"
        android:layout_width="150dp" android:text="Reserve Tour" android:layout_centerHorizontal="true"
        android:id="@+id/btnReserve" android:textColor="@color/orange"
        android:layout_height="35dp" android:background="@drawable/rectangle_orange"/>
        </RelativeLayout>
</RelativeLayout>
