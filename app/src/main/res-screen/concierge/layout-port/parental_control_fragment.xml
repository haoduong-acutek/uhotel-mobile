<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView android:textSize="@dimen/normal" android:lines="2"
        android:layout_width="wrap_content" android:textColor="@color/dark" android:layout_marginTop="20dp"
        android:gravity="center" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" android:text="Pin protect access\nto any of the following"/>

    <TextView android:text="Enable All" android:textColor="@color/dark" android:layout_marginTop="20dp"
        android:background="@drawable/control" android:layout_gravity="center_horizontal"
        android:layout_width="150dp" android:id="@+id/btnEnableAll"
        android:textSize="@dimen/normal" android:gravity="center"
        android:layout_height="60dp" />
    <android.support.v7.widget.RecyclerView android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content" android:id="@+id/recyclerView"
        android:layout_height="wrap_content" android:layout_marginTop="30dp"/>

    <RelativeLayout android:layout_marginTop="40dp"
        android:layout_width="match_parent" android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <TextView android:gravity="center"
            android:layout_width="150dp" android:text="Save" android:layout_centerVertical="true"
            android:id="@+id/btnSave" android:textColor="@color/orange"
            android:layout_height="35dp" android:background="@drawable/rectangle_orange"/>
        <TextView android:gravity="center"
            android:layout_width="150dp" android:text="Change Pin" android:layout_centerVertical="true"
            android:id="@+id/btnChangePin" android:textColor="@color/black" android:layout_alignParentRight="true"
            android:layout_height="35dp" android:background="@color/orange"/>
    </RelativeLayout>
</LinearLayout>

