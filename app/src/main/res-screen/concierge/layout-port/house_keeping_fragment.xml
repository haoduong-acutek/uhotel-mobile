<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content" android:textColor="@color/dark"
        android:gravity="center"
        android:lines="3" android:textSize="@dimen/normal" android:layout_margin="40dp"
        android:layout_height="wrap_content" android:text="For any assistance you may require from our Room Attendant, please keep the 'housekeeping' button below"/>

    <ImageView android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content" android:id="@+id/imageView"
        android:layout_height="wrap_content" android:src="@drawable/housekeeping"/>

    <TextView
        android:layout_width="wrap_content" android:textColor="@color/darker"
        android:gravity="center" android:layout_marginTop="40dp" android:id="@+id/txtBottom"
        android:textSize="@dimen/normal" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" android:text="housekeeping please"/>

</LinearLayout>

