<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent" android:id="@+id/recyclerView"
            android:layout_height="wrap_content"/>
        <Button android:layout_alignParentBottom="true" android:layout_marginBottom="30dp"
            android:layout_width="wrap_content" android:text="Request" android:layout_centerHorizontal="true"
            android:id="@+id/btnRequest" android:textColor="@color/dark"
            android:layout_height="wrap_content" android:background="@drawable/rectangle"/>

    </RelativeLayout>