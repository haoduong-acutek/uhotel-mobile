<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="left|center_vertical"
    android:id="@+id/llBackground"
    android:layout_width="150dp"
    android:background="@drawable/control"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView android:layout_marginLeft="5dp"
        android:layout_width="50dp"  android:paddingLeft="5dp"
        android:paddingRight="5dp" android:id="@+id/imageView"
        android:layout_height="wrap_content" android:src="@drawable/locked"/>
    <TextView android:textColor="@color/dark"
        android:textSize="@dimen/normal" android:layout_marginRight="5dp"
         android:text="Room control" android:gravity="center"
        android:layout_width="match_parent" android:id="@+id/txtName"
        android:layout_height="wrap_content" />
</LinearLayout>

