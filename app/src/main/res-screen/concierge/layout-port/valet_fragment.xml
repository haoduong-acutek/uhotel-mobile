<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content" android:textColor="@color/dark"
        android:gravity="center"
        android:lines="3" android:textSize="@dimen/normal" android:layout_margin="40dp"
        android:layout_height="wrap_content" android:text="Our record show that you have a car checked at our valet service. Please hit the 'valet' button below to retrieve your vehicle at the front."/>

    <ImageView android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content" android:id="@+id/imageView"
        android:layout_height="wrap_content" android:src="@drawable/valet"/>

    <TextView android:id="@+id/txtBottom"
        android:layout_width="wrap_content" android:textColor="@color/darker"
        android:gravity="center" android:layout_margin="40dp"
        android:textSize="@dimen/normal" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" android:text="Please grab my car, thanks!"/>

</LinearLayout>

