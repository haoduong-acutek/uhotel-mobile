<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView android:layout_centerVertical="true" android:layout_marginLeft="40dp"
        android:layout_width="wrap_content" android:id="@+id/txtName" android:text="Setting"
        android:textSize="@dimen/normal"
        android:layout_height="wrap_content" android:textColor="@color/dark"/>
    <ImageView android:layout_marginRight="40dp"
        android:layout_width="wrap_content" android:id="@+id/imageView" android:layout_alignParentRight="true"
        android:src="@drawable/ico_down" android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
    <View android:id="@+id/lineView"
        android:layout_width="match_parent" android:layout_alignParentBottom="true"
        android:layout_height="1dp" android:background="@color/dark"/>
</RelativeLayout>
